    <!-- Page 8: Tips -->
    <string name="tutorial_tips_title">CONSIGLI PER IL SUCCESSO</string>
    <string name="tutorial_tip1">Calibra il misuratore di potenza prima del test</string>
    <string name="tutorial_tip2">Riscaldamento di 10–15 minuti</string>
    <string name="tutorial_tip3">Resta idratato - acqua pronta</string>
    <string name="tutorial_tip4">Usa modalità ERG sui rulli smart</string>
    <string name="tutorial_tip5">Testa riposato, non dopo allenamenti duri</string>
    <string name="tutorial_tip6">Per RAMPA: spingi fino all\'esaurimento</string>
    <string name="tutorial_tip7">Ritesta ogni 4–6 settimane</string>

