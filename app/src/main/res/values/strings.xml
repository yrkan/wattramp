    <string name="tutorial_during_power">Current Power - Your real-time output</string>
    <string name="tutorial_during_target">Target Power - What to aim for</string>
    <string name="tutorial_during_deviation">Deviation - How far from target (+/-)</string>
    <string name="tutorial_during_time">Time - Remaining in current phase</string>
    <string name="tutorial_during_hr">Heart Rate - With zone indicator</string>
    <string name="tutorial_during_cadence">Cadence - Pedaling speed (RPM)</string>

    <!-- Page 7: Results -->
    <string name="tutorial_results_title">UNDERSTANDING RESULTS</string>
    <string name="tutorial_results_desc">After completing a test, you\'ll see:</string>
    <string name="tutorial_results_ftp">New FTP - Your calculated threshold power</string>
    <string name="tutorial_results_wkg">W/kg - Power-to-weight ratio (fitness indicator)</string>
    <string name="tutorial_results_np">NP - Normalized Power (adjusted for variability)</string>
    <string name="tutorial_results_vi">VI - Variability Index (pacing consistency)</string>
    <string name="tutorial_results_ef">EF - Efficiency Factor (power per heartbeat)</string>
    <string name="tutorial_results_save">Tap SAVE to update your FTP and training zones</string>

    <!-- Page 8: Tips -->
    <string name="tutorial_tips_title">TIPS FOR SUCCESS</string>
    <string name="tutorial_tip1">Calibrate power meter before testing</string>
    <string name="tutorial_tip2">Warm up 10–15 minutes before the test</string>
    <string name="tutorial_tip3">Stay hydrated - have water ready</string>
    <string name="tutorial_tip4">Use ERG mode on smart trainers</string>
    <string name="tutorial_tip5">Test when rested, not after hard workouts</string>
    <string name="tutorial_tip6">For RAMP: push until you cannot continue</string>
    <string name="tutorial_tip7">Retest every 4–6 weeks to track progress</string>

