    <!-- Page 1: What is FTP -->
    <string name="tutorial_ftp_title">¿QUÉ ES EL FTP?</string>
    <string name="tutorial_ftp_desc">FTP (Potencia de Umbral Funcional) es la potencia máxima que puedes sostener durante una hora. Es el estándar para medir la forma ciclista.</string>
    <string name="tutorial_ftp_why">¿Por qué medir el FTP?</string>
    <string name="tutorial_ftp_reason1">Establecer zonas de entrenamiento precisas</string>
    <string name="tutorial_ftp_reason2">Seguir el progreso de forma</string>
    <string name="tutorial_ftp_reason3">Gestionar el ritmo en carreras</string>

    <!-- Page 2: RAMP Test -->
    <string name="tutorial_ramp_title">TEST RAMPA</string>
    <string name="tutorial_ramp_subtitle">Rápido y eficiente</string>
    <string name="tutorial_ramp_duration">~20 minutos</string>
    <string name="tutorial_ramp_formula">FTP = MÁX × 0.75</string>
    <string name="tutorial_ramp_desc">La potencia aumenta 20W cada minuto hasta el agotamiento. FTP calculado desde la potencia máx de 1 minuto.</string>
    <string name="tutorial_ramp_best">Ideal para: Evaluación rápida, tiempo limitado, tests regulares</string>

    <!-- Page 3: 20-MIN Test -->
    <string name="tutorial_20min_title">TEST 20 MINUTOS</string>
    <string name="tutorial_20min_subtitle">Estándar de oro</string>
    <string name="tutorial_20min_duration">~55 minutos</string>
    <string name="tutorial_20min_formula">FTP = PROM × 0.95</string>
    <string name="tutorial_20min_desc">Tras calentar, pedalea 20 minutos a esfuerzo máximo sostenible. FTP = 95% de potencia media.</string>
    <string name="tutorial_20min_best">Ideal para: Resultados precisos, ciclistas experimentados</string>

    <!-- Page 4: 8-MIN Test -->
    <string name="tutorial_8min_title">TEST 2×8 MINUTOS</string>
    <string name="tutorial_8min_subtitle">Práctica de ritmo</string>
    <string name="tutorial_8min_duration">~45 minutos</string>
    <string name="tutorial_8min_formula">FTP = PROM × 0.90</string>
    <string name="tutorial_8min_desc">Dos esfuerzos máximos de 8 minutos con recuperación. Promedio de ambos intervalos.</string>
    <string name="tutorial_8min_best">Ideal para: Práctica de ritmo, principiantes</string>

