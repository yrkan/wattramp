    <!-- Page 8: Tips -->
    <string name="tutorial_tips_title">DICAS PARA O SUCESSO</string>
    <string name="tutorial_tip1">Calibre o medidor de potência antes do teste</string>
    <string name="tutorial_tip2">Aquecimento de 10–15 minutos</string>
    <string name="tutorial_tip3">Mantenha-se hidratado - água pronta</string>
    <string name="tutorial_tip4">Use modo ERG em rolos inteligentes</string>
    <string name="tutorial_tip5">Teste descansado, não após treinos pesados</string>
    <string name="tutorial_tip6">Para RAMPA: empurre até não aguentar mais</string>
    <string name="tutorial_tip7">Reteste a cada 4–6 semanas</string>

