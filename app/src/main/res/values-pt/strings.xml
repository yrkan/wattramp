    <!-- Page 1: What is FTP -->
    <string name="tutorial_ftp_title">O QUE É FTP?</string>
    <string name="tutorial_ftp_desc">FTP (Potência de Limiar Funcional) é a potência máxima que você pode sustentar por cerca de uma hora. É o padrão para medir a forma ciclística.</string>
    <string name="tutorial_ftp_why">Por que testar FTP?</string>
    <string name="tutorial_ftp_reason1">Definir zonas de treino precisas</string>
    <string name="tutorial_ftp_reason2">Acompanhar progresso de forma</string>
    <string name="tutorial_ftp_reason3">Gerenciar ritmo em provas</string>

    <!-- Page 2: RAMP Test -->
    <string name="tutorial_ramp_title">TESTE RAMPA</string>
    <string name="tutorial_ramp_subtitle">Rápido e eficiente</string>
    <string name="tutorial_ramp_duration">~20 minutos</string>
    <string name="tutorial_ramp_formula">FTP = MÁX × 0.75</string>
    <string name="tutorial_ramp_desc">A potência aumenta 20W a cada minuto até a exaustão. FTP calculado da potência máx de 1 minuto.</string>
    <string name="tutorial_ramp_best">Ideal para: Avaliação rápida, tempo limitado, testes regulares</string>

    <!-- Page 3: 20-MIN Test -->
    <string name="tutorial_20min_title">TESTE 20 MINUTOS</string>
    <string name="tutorial_20min_subtitle">Padrão ouro</string>
    <string name="tutorial_20min_duration">~55 minutos</string>
    <string name="tutorial_20min_formula">FTP = MÉD × 0.95</string>
    <string name="tutorial_20min_desc">Após aquecimento, pedale 20 minutos em esforço máximo sustentável. FTP = 95% da potência média.</string>
    <string name="tutorial_20min_best">Ideal para: Resultados precisos, ciclistas experientes</string>

    <!-- Page 4: 8-MIN Test -->
    <string name="tutorial_8min_title">TESTE 2×8 MINUTOS</string>
    <string name="tutorial_8min_subtitle">Prática de ritmo</string>
    <string name="tutorial_8min_duration">~45 minutos</string>
    <string name="tutorial_8min_formula">FTP = MÉD × 0.90</string>
    <string name="tutorial_8min_desc">Dois esforços máximos de 8 minutos com recuperação. Média de ambos os intervalos.</string>
    <string name="tutorial_8min_best">Ideal para: Prática de ritmo, iniciantes</string>

