<?xml version="1.0" encoding="utf-8"?>
<!-- TargetPower MEDIUM: Label top, large value center -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/datafield_bg"
    android:padding="8dp">

    <!-- Header label -->
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/df_target"
        android:textSize="11sp"
        android:textColor="@color/text_dim" />

    <!-- Value centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="245"
            android:textSize="56sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/df_watt"
            android:textSize="24sp"
            android:textColor="@color/text_dim"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Status text (e.g., "Zone 4" or "MAX EFFORT") -->
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/text_dim"
        android:gravity="center" />

</LinearLayout>
