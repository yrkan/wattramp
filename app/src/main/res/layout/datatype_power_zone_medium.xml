<?xml version="1.0" encoding="utf-8"?>
<!-- PowerZone MEDIUM: Label top, zone status center, deviation bottom -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/datafield_bg"
    android:padding="8dp">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datatype_zone_name"
        android:textSize="11sp"
        android:textColor="@color/text_dim" />

    <TextView
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="IN ZONE"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/status_optimal"
        android:gravity="center" />

    <TextView
        android:id="@+id/deviation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/text_dim"
        android:gravity="center" />

</LinearLayout>
