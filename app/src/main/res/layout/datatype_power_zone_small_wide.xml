<?xml version="1.0" encoding="utf-8"?>
<!-- PowerZone SMALL_WIDE: Horizontal - zone status + deviation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/datafield_bg"
    android:gravity="center"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/df_zone"
        android:textSize="14sp"
        android:textColor="@color/text_dim"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN ZONE"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/status_optimal" />

    <TextView
        android:id="@+id/deviation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/text_dim"
        android:layout_marginStart="8dp" />

</LinearLayout>
